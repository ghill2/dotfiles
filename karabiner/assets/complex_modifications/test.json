{
    "title": "Remap key with command key held down",
    "rules": [
      {
        "description": "Remap key when command key is held down",
        "manipulators": [
          {
            "type": "basic",
            "from": {
              "key_code": "escape",
              "modifiers": {
                "mandatory": [
                  "left_command"
                ]
              }
            },
            "to": [
              {
                "key_code": "tab",
                "modifiers": ["left_shift", "left_command"]

              }
            ]
          }
        ]
      }
    ]
  }